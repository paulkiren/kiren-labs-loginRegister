{
  "name": "architecture-design-experiments",
  "version": "0.0.1",
  "private": true,
  "description": "Architecture experiments for login/register across monolith, microservices, and serverless.",
  "engines": {
    "node": ">=18.18.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "typecheck": "tsc -b",
    "test": "echo \"TODO: add tests\"",
    "contract:test": "echo \"TODO: contract tests\"",
    "dev:monolith": "npm run start:dev --workspace=apps/monolith-api",
    "docker:up": "docker-compose -f infra/docker/docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f infra/docker/docker-compose.dev.yml down"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
